<div id="basket">
    {{#if pharmacy.length}}
    <table>
        <thead>
            <tr>
                <th>Назва</th>
                <th>Кількість</th>
                <th>Дія</th>
            </tr>
        </thead>
        <tbody>

            {{#each pharmacy}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td><button class="btn btn-small js-remove" data-id='{{id}}'
                data-csrf="{{@root.csrf}}">Видалити</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <form action="/orders" method="POST">
    <input type="hidden" name="_csrf" value="{{csrf}}">
        <button class="btn center" type="submit">Оформити</button>
    </form>

    <p><strong>Ціна:</strong><span class="price">{{price}}</span></span></p>
    {{else}}
    <h2 class="center">Кошик порожній</h2>
    {{/if}}
</div>